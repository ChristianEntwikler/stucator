
@{
    ViewBag.Title = "View Student Modules";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row tab-content">
            <div id="list-view" class="tab-pane fade active show col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">All Student Modules List  </h4>
                        <a href="~/Student/StudentModule" class="btn btn-primary">+ Add new</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            @model List<Stucation.Models.ViewStudentModuleDto>
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Module ID</th>
                                        <th>Student ID</th>
                                        <th>Name</th>
                                        <th>Module Name</th>
                                        <th>Term</th>
                                        <th>Date Created</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var data in Model)
                                    {
                                        <tr>
                                            <td><strong>@data.studentModule.studentModuleId</strong></td>
                                            <td>@data.studentModule.moduleId</td>
                                            <td>@data.studentModule.studentId</td>
                                            <td>@data.student.surname @data.student.firstName @data.student.middleName</td>
                                            <td>@data.module.moduleName</td>
                                            <td>@data.module.term</td>
                                            <td>@data.studentModule.dateCreated</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

