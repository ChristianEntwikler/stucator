
@{
    ViewBag.Title = "View Student Report";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row tab-content">
            <div id="list-view" class="tab-pane fade active show col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Student Report </h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            @model List<Stucation.Models.ViewStudentReportDto>
                            <table class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Assessment ID</th>
                                        <th>Student ID</th>
                                        <th>Name</th>
                                        <th>Module</th>
                                        <th>Total Score</th>
                                        <th>Grade</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var data in Model)
                                    {
                                        <tr>
                                            <td><strong>@data.viewStudentAssessment.studentAssessment.studentAssessmentId</strong></td>
                                            <td>@data.viewStudentAssessment.studentAssessment.AssessmentId</td>
                                            <td>@data.viewStudentAssessment.studentAssessment.studentId</td>
                                            <td>@data.viewStudentAssessment.student.surname @data.viewStudentAssessment.student.firstName @data.viewStudentAssessment.student.middleName</td>
                                            <td>@data.viewStudentAssessment.assessment.assessmentTitle</td>
                                            <td>@data.totalScore</td>
                                            <td>@data.grade</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

