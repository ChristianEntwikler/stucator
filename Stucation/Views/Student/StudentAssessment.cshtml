
@{
    ViewBag.Title = "Student Assessment";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Update Student Assessment</h4>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Student Module Details</h4>
            </div>
            <div class="card-body">
                @model Tuple<Stucation.Models.StudentAssessmentDto, List<Stucation.Models.StudentAssessmentDto>>

                @using (Html.BeginForm("SubmitStudentAssessment", "Student", FormMethod.Post))
                {
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Course Name</label>
                            @Html.DropDownListFor(model => model.Item1.studentId, ViewBag.Student as SelectList, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Item1.studentId)
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Assessment Title</label>
                            @Html.DropDownListFor(model => model.Item1.AssessmentId, ViewBag.AssessmentList as SelectList, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Item1.AssessmentId)
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Score</label>
                            @Html.TextBoxFor(model => model.Item1.score, new { placeholder = "Input Score", @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.Item1.score)
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Status</label>
                            @Html.DropDownListFor(model => model.Item1.status, new SelectList(new[] { "Active", "Inactive" }), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Item1.status)
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>

                </div>
                }
            </div>

            <div class="card-body">
                <div class="table-responsive">

                    <table id="example3" class="display" style="min-width: 845px">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Student</th>
                                <th>Assessment</th>
                                <th>Score</th>
                                <th>Status</th>
                                <th>Date Created</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var data in Model.Item2)
                            {
                                <tr>
                                    <td><strong>@data.studentAssessmentId</strong></td>
                                    <td>@data.studentId</td>
                                    <td>@data.AssessmentId</td>
                                    <td>@data.score</td>
                                    <td>@data.status</td>
                                    <td>@data.dateCreated</td>
                                    <td>
                                        <a href="~/Module/EditModule?i=@data.studentAssessmentId" class="btn btn-sm btn-primary"><i class="la la-pencil"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>



