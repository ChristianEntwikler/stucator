
@{
    ViewBag.Title = "About Course";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Course Details</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/index">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0);">Courses</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0);">Course Details</a></li>
        </ol>
    </div>
</div>

<div class="row">
    @using Stucation.Models
    @model Stucation.Models.CourseDto
    <div class="col-xl-3 col-xxl-4 col-lg-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <img class="img-fluid" src="images/courses/pic1.jpg" alt="">
                    <div class="card-body">
                        <h4 class="mb-0">@Model.courseName</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">About Course</h2>
                    </div>
                    <div class="card-body pb-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>Course ID</strong>
                                <span class="mb-0">@Model.courseId</span>
                            </li>
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>Duration</strong>
                                <span class="mb-0">@Model.coursePeriod Year(s)</span>
                            </li>
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>Date</strong>
                                <span class="mb-0">@Model.dateCreated</span>
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer pt-0 pb-0 text-center">
                        <div class="row">
                            <div class="col-4 pt-3 pb-3 border-right">
                                <h3 class="mb-1 text-primary"></h3>
                                <span></span>
                            </div>
                            <div class="col-4 pt-3 pb-3 border-right">
                                <h3 class="mb-1 text-primary">@Model.coursePeriod</h3>
                                <span>Year(s)</span>
                            </div>
                            <div class="col-4 pt-3 pb-3">
                                <h3 class="mb-1 text-primary">@Model.maximumStudents</h3>
                                <span>Students</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9 col-xxl-8 col-lg-8">
        <div class="card">
            <div class="card-body">
                <p>@Model.courseDetails</p>
                
            </div>
        </div>
    </div>
</div>

