
@{
    ViewBag.Title = "View Courses";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>All Courses</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/index">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0);">Courses</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0);">All Courses</a></li>
        </ol>
    </div>
</div>

<div class="row">
    @model List<Stucation.Models.CourseDto>
    @foreach (var data in Model)
    {
        <div class="col-xl-3 col-xxl-4 col-lg-4 col-md-6 col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h4>@data.courseName</h4>
                    <ul class="list-group mb-3 list-group-flush">
                        <li class="list-group-item px-0 border-top-0 d-flex justify-content-between">
                            <span class="mb-0 text-muted">Course Code :</span>
                            <a href="javascript:void(0);"><strong>@data.courseId</strong></a>
                        </li>
                        <li class="list-group-item px-0 d-flex justify-content-between">
                            <span class="mb-0">Duration :</span><strong>@data.coursePeriod</strong>
                        </li>
                        <li class="list-group-item px-0 d-flex justify-content-between">
                            <span><i class="fa fa-graduation-cap text-primary mr-2"></i>Student</span><strong>@data.maximumStudents</strong>
                        </li>
                    </ul>
                    <a href="~/Course/AboutCourse?i=@data.courseId" class="btn btn-primary">Read More</a>
                    <a href="~/Course/EditCourse?i=@data.courseId" class="btn btn-sm btn-primary"><i class="la la-pencil"></i></a>
                    <a href="~/Course/CourseModule?i=@data.courseId" class="btn btn-sm btn-primary"><i class="la la-book"> Add Modules</i></a>
                    <a href="~/Course/ViewCourseModules?i=@data.courseId" class="btn btn-sm btn-secondary"><i class="la la-book"> View Modules</i></a>
                </div>
            </div>
        </div>
    }
    
</div>

