
@{
    ViewBag.Title = "Add Course";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Add Course</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/index">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0);">Course</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0);">Add Course</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Courses Details</h4>
            </div>
            <div class="card-body">
                @model Stucation.Models.CourseDto

                @using (Html.BeginForm("SubmitData", "Course", FormMethod.Post))
                {
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Course Name</label>
                            @Html.TextBoxFor(model => model.courseName, new { placeholder = "Input Course name", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.courseName)
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Course Details</label>
                            @Html.TextAreaFor(model => model.courseDetails, new { placeholder = "Input Course Details", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.courseDetails)
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Course Duration</label>
                            @Html.TextBoxFor(model => model.coursePeriod, new { placeholder = "Input Course Duration", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.coursePeriod)
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Maximum Students</label>
                            @Html.TextBoxFor(model => model.maximumStudents, new { placeholder = "Input Maximum Students", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.maximumStudents)
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Status</label>
                            @Html.DropDownListFor(model => model.status, new SelectList(new[] { "Active", "Inactive" }), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.status)
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <button type="submit" class="btn btn-primary">submit</button>
                    </div>

                </div>
                }
                </div>
        </div>
    </div>
</div>

