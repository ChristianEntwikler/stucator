
@{
    ViewBag.Title = "About Module";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>About Module</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/index">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0);">Modules</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0);">About Module</a></li>
        </ol>
    </div>
</div>

<div class="row">
    @using Stucation.Models
    @model Stucation.Models.ModuleDto
    <div class="col-xl-3 col-xxl-4 col-lg-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mb-0">@Model.moduleName</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">About Module</h2>
                    </div>
                    <div class="card-body pb-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>Module ID</strong>
                                <span class="mb-0">@Model.moduleId</span>
                            </li>
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>Date</strong>
                                <span class="mb-0">@Model.dateCreated</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9 col-xxl-8 col-lg-8">
        <div class="card">
            <div class="card-body">
                <p>@Model.moduleDetails</p>

            </div>
        </div>
    </div>
</div>




